<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity ManageCashPoint.
    -->
    <changeSet id="20160229072353" author="jhipster">
        <createTable tableName="manage_cash_point">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="today_date" type="timestamp"/>
            
            <column name="payee_name" type="varchar(255)"/>
            
            <column name="txn_amount" type="${floatType}"/>
            
            <column name="open_bal" type="${floatType}"/>
            
            <column name="avail_bal" type="${floatType}"/>
            
            <column name="total_receipts" type="integer"/>
            
            <column name="location_code" type="varchar(255)"/>
            
            <column name="transaction_type_master_id" type="bigint"/>
            <column name="cash_book_master_id" type="bigint"/>
            <column name="payment_types_id" type="bigint"/>
            <column name="file_number_id" type="bigint"/>
            <column name="customer_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="manage_cash_point" columnName="today_date" columnDataType="datetime"/>

        
        <addForeignKeyConstraint baseColumnNames="transaction_type_master_id"
                                 baseTableName="manage_cash_point"
                                 constraintName="fk_managecashpoint_transactiontypemaster_id"
                                 referencedColumnNames="id"
                                 referencedTableName="transaction_type_master"/>

        <addForeignKeyConstraint baseColumnNames="cash_book_master_id"
                                 baseTableName="manage_cash_point"
                                 constraintName="fk_managecashpoint_cashbookmaster_id"
                                 referencedColumnNames="id"
                                 referencedTableName="cash_book_master"/>

        <addForeignKeyConstraint baseColumnNames="payment_types_id"
                                 baseTableName="manage_cash_point"
                                 constraintName="fk_managecashpoint_paymenttypes_id"
                                 referencedColumnNames="id"
                                 referencedTableName="payment_types"/>

        <addForeignKeyConstraint baseColumnNames="file_number_id"
                                 baseTableName="manage_cash_point"
                                 constraintName="fk_managecashpoint_filenumber_id"
                                 referencedColumnNames="id"
                                 referencedTableName="file_number"/>

        <addForeignKeyConstraint baseColumnNames="customer_id"
                                 baseTableName="manage_cash_point"
                                 constraintName="fk_managecashpoint_customer_id"
                                 referencedColumnNames="id"
                                 referencedTableName="customer"/>

    </changeSet>
</databaseChangeLog>
