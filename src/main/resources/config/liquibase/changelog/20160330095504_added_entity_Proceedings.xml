<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Proceedings.
    -->
    <changeSet id="20160330095504" author="jhipster">
        <createTable tableName="proceedings">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="sub_total_a" type="double"/>
            
            <column name="supervision_charge" type="double"/>
            
            <column name="labour_charge" type="double"/>
            
            <column name="site_survey" type="double"/>
            
            <column name="sub_total_b" type="double"/>
            
            <column name="connection_fee" type="double"/>
            
            <column name="water_meter_shs" type="double"/>
            
            <column name="application_form_fee" type="double"/>
            
            <column name="grand_total" type="double"/>
            
            <column name="supervision_percent" type="double"/>
            
            <column name="labour_charge_percent" type="double"/>
            
            <column name="site_survey_percent" type="double"/>
            
            <column name="connection_fee_percent" type="double"/>
            
            <column name="application_txn_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="application_txn_id"
                                 baseTableName="proceedings"
                                 constraintName="fk_proceedings_applicationtxn_id"
                                 referencedColumnNames="id"
                                 referencedTableName="application_txn"/>

    </changeSet>
</databaseChangeLog>
